<!-- app/src/main/res/layout/activity_signup.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->

    <!-- Input fields and button -->

    <TextView
        android:id="@+id/docLinkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:text="Sign Up"
        android:textColor="#0073cf"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/docLinkTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

    </LinearLayout>

    <!-- Bottom login link -->
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp">

    </LinearLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:backgroundTint="#0073cf"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="491dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="345dp"
        android:layout_height="61dp"
        android:background="@android:drawable/edit_text"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="396dp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="342dp"
        android:layout_height="62dp"
        android:background="@android:drawable/edit_text"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="325dp" />

    <TextView
        android:id="@+id/haveAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have an account? "
        android:textColor="#737171"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="555dp" />

    <TextView
        android:id="@+id/loginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Login"
        android:textColor="#0073cf"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="555dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="426dp"
        android:layout_height="426dp"
        app:srcCompat="@drawable/login_backgrnd"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="-165dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DocLink"
        android:textColor="#FFFEFE"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="100dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="179dp"
        android:layout_height="180dp"
        android:rotationY="180"
        app:srcCompat="@drawable/logo_topic"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="41dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="223dp"
        android:layout_height="136dp"
        app:srcCompat="@drawable/social"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="569dp" />

</androidx.constraintlayout.widget.ConstraintLayout>