<!-- XML -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Blue box at top -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blueBox"
            android:layout_width="415dp"
            android:layout_height="207dp"
            android:background="#0073cf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Profile picture (top right, rounded) -->

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="55dp"
                android:layout_height="54dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="344dp"
                android:background="@drawable/rounded_image_bg"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/docLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="DocLink"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImage" />

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="383dp"
                android:layout_height="41dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/search_bar_bg"
                android:drawablePadding="12dp"
                android:hint="    Search Nearby Doctors and Clinics..."
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/docLink" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="35dp"
                android:layout_height="26dp"
                app:srcCompat="@drawable/searchicon"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="108dp"
                android:layout_height="30dp"
                android:text="Hi Andrew !"
                android:textColor="#B4B4B4"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="39dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- First doctor card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/doctorCard"
            android:layout_width="390dp"
            android:layout_height="315dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/doctor_card_bg"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/doctorPhoto"
                android:layout_width="385dp"
                android:layout_height="192dp"
                android:alpha="0.8"
                android:background="@drawable/rounded1_image_bg"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="171dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:text="Dr. Jane Smith"
                android:textColor="#242124"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/doctorPhoto"
                tools:layout_editor_absoluteY="117dp" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="doctorCard" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologist"
                android:textColor="#242124"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="148dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="259dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/ratings"
                tools:layout_editor_absoluteX="-61dp"
                tools:layout_editor_absoluteY="148dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="132dp"
                android:layout_height="20dp"
                android:text="4.8   (124 Reviews)"
                android:textColor="#737171"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="206dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="28dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/availability"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="231dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available: Mon, Tue, Fri"
                android:textColor="#0D0B0B"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="235dp" />

            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="376dp"
                android:layout_height="44dp"
                android:backgroundTint="#0073cf"
                android:text="Book Now"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="423dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Second doctor card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/doctorCard2"
            android:layout_width="390dp"
            android:layout_height="315dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/doctor_card_bg"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/doctorPhoto2"
                android:layout_width="389dp"
                android:layout_height="193dp"
                android:alpha="0.8"
                android:background="@drawable/rounded1_image_bg"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="DuplicateIds" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="doctorCard"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orthopedic Surgeon"
                android:textColor="#242124"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="148dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="259dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/ratings"
                tools:layout_editor_absoluteX="-61dp"
                tools:layout_editor_absoluteY="148dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="132dp"
                android:layout_height="20dp"
                android:text="4.9  (148 Reviews)"
                android:textColor="#737171"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="206dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="28dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/availability"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="231dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available: Mon, Thu, Sun"
                android:textColor="#0D0B0B"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="235dp" />

            <Button
                android:id="@+id/Move"
                android:layout_width="376dp"
                android:layout_height="44dp"
                android:backgroundTint="#0073cf"
                android:text="Book Now"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="DuplicateIds" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Roshan Rithik"
                android:textColor="#161515"
                android:textColorHint="#090808"
                android:textColorLink="#0D0D0D"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="121dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/doctorCard2"
            android:layout_width="390dp"
            android:layout_height="315dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/doctor_card_bg"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/doctorPhoto2"
                android:layout_width="389dp"
                android:layout_height="193dp"
                android:alpha="0.8"
                android:background="@drawable/rounded1_image_bg"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="doctorCard"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dermatologist"
                android:textColor="#242124"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="148dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="259dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/ratings"
                tools:layout_editor_absoluteX="-61dp"
                tools:layout_editor_absoluteY="148dp"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="132dp"
                android:layout_height="20dp"
                android:text="4.6  (101 Reviews)"
                android:textColor="#737171"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="206dp"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="28dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/availability"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="231dp"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available: Wed, Thu, Sun"
                android:textColor="#0D0B0B"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="235dp"
                tools:ignore="DuplicateIds,MissingConstraints" />

            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="376dp"
                android:layout_height="44dp"
                android:backgroundTint="#0073cf"
                android:text="Book Now"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="DuplicateIds" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Shyama Rani"
                android:textColor="#161515"
                android:textColorHint="#090808"
                android:textColorLink="#0D0D0D"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="121dp" />
            <!-- XML -->


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/docbar" />


        <!-- Add more doctor cards here as needed -->

    </LinearLayout>
</ScrollView>